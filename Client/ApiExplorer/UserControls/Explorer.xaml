<UserControl x:Class="ApiExplorer.UserControls.Explorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:axv="clr-namespace:ApiExplorer.ValueConverters">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- URL bar -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBox Grid.Column="0" Text="{Binding Url}" x:Name="UrlInput"/>
      <Button Grid.Column="1" Command="{Binding GoCommand}" Content="Go" Width="50"/>
    </Grid>

    <!-- Content -->
    <ContentControl Grid.Row="1" Content="{Binding ContentRender}"/>
    
    <!-- Status bar -->
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBox Grid.Column="0" Text="{Binding ResponseStatus}" IsReadOnly="True" Width="200"
               Visibility="{Binding IsExecutingRequest, Converter={axv:BoolToVisibilityConverter}, ConverterParameter=InverseVisibility}"/>
      <ProgressBar Grid.Column="1" Width="100" Height="10" HorizontalAlignment="Right" Margin="0 0 10 0"
                   IsIndeterminate="true"
                   Visibility="{Binding IsExecutingRequest, Converter={axv:BoolToVisibilityConverter}}"/>
    </Grid>
  </Grid>
</UserControl>
