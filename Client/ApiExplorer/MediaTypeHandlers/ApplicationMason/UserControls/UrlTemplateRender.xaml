<UserControl x:Class="ApiExplorer.MediaTypeHandlers.ApplicationMason.UserControls.UrlTemplateRender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:axu="clr-namespace:ApiExplorer.Utilities">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Style="{StaticResource ResourceKey=Label}"/>
    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DisplayTitle}"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="Template:" Style="{StaticResource ResourceKey=Label}"/>
    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Template, Mode=OneTime}" IsReadOnly="True" Style="{StaticResource ResourceKey=Readonly}" Margin="0 0 0 10"/>

    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="Parameters" Style="{StaticResource ResourceKey=FormHeading}"/>

    <ItemsControl Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Parameters}" Focusable="False">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <StackPanel>
            <Label Target="{Binding ElementName=ParameterInput}" Content="{Binding DisplayTitle}" FontWeight="Bold" FontStyle="Italic" Padding="0" Margin="0"/>
            <TextBlock Text="{Binding Description}" Style="{StaticResource ResourceKey=ParamInfo}"/>
            <TextBox Name="ParameterInput" Text="{Binding Value}" Margin="0 0 0 4"
                     axu:FocusBehavior.IsFocused="{Binding IsFocused}"/>
          </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="0 1 0 0" Padding="4">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
        <Button Content="Submit" Command="{Binding SubmitCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
        <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="10 0 0 0"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
