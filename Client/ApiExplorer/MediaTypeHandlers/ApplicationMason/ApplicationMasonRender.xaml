<UserControl x:Class="ApiExplorer.MediaTypeHandlers.ApplicationMason.ApplicationMasonRender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid DataContext="{Binding RootResource}">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <ListView Grid.Row="0" ItemsSource="{Binding Properties}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text=": "/>
            <TextBlock Text="{Binding Value}"/>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

    <ListView Grid.Row="1" ItemsSource="{Binding Links}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextBlock>
            <Hyperlink Command="{Binding FollowLinkCommand}">
              <TextBlock Text="{Binding Title}"/>
            </Hyperlink>
          </TextBlock>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
